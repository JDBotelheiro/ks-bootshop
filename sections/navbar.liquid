{% schema %}
{
  "name": "GRIFF Navbar",
  "limit": 1,
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 50,
      "max": 250,
      "step": 10,
      "unit": "px",
      "label": "Logo width",
      "default": 100
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "checkbox",
      "id": "show_social_icons",
      "label": "Show social icons",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "menu_item",
      "name": "Menu Item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Menu item",
          "default": "Menu item"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "GRIFF Navbar",
      "blocks": [
        {
          "type": "menu_item"
        },
        {
          "type": "menu_item"
        },
        {
          "type": "menu_item"
        },
        {
          "type": "menu_item"
        },
        {
          "type": "menu_item"
        },
        {
          "type": "menu_item"
        }
      ]
    }
  ]
}
{% endschema %}

<style>
  #shopify-section-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
  }
  #navbar-wrapper {
    padding: 10px 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  #navbar-wrapper a {
    color: {{ section.settings.text_color }};
    text-decoration: none;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }
  .nav-menu {
    display: flex;
    gap: 20px;
  }
  .social-icons {
    display: flex;
    gap: 15px;
  }
  .social-icons svg {
    width: 20px;
    height: 20px;
    fill: {{ section.settings.text_color }};
  }
  @media (max-width: 768px) {
    #navbar-wrapper {
      flex-direction: column;
      align-items: center;
      padding: 20px;
    }
    .nav-menu, .social-icons {
      margin-top: 20px;
    }
  }
</style>

<div id="navbar-wrapper">
  <a href="{{ routes.root_url }}" class="logo">
    {% if section.settings.logo != blank %}
      {{ section.settings.logo | image_url: width: section.settings.logo_width | image_tag:
        width: section.settings.logo_width,
        height: '',
        alt: shop.name
      }}
    {% else %}
      <span style="font-size: 24px; font-weight: bold;">GRIFF</span>
    {% endif %}
  </a>
  
  <nav class="nav-menu">
    {% for block in section.blocks %}
      {% if block.settings.title != blank and block.settings.link != blank %}
        <a href="{{ block.settings.link }}">{{ block.settings.title }}</a>
      {% endif %}
    {% endfor %}
  </nav>
  
  {% if section.settings.show_social_icons %}
    <div class="social-icons">
      {% render 'social-icons', icon_size: 20 %}
    </div>
  {% endif %}
</div>