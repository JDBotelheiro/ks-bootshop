{% schema %}
{
  "name": "NENA Navbar",
  "limit": 1,
  "settings": [
    {
      "type": "text",
      "id": "announcement_text",
      "label": "Announcement Text",
      "default": "Free Shipping For All Orders Over $100"
    },
    {
      "type": "color",
      "id": "announcement_bg_color",
      "label": "Announcement Background Color",
      "default": "#4A90E2"
    },
    {
      "type": "color",
      "id": "announcement_text_color",
      "label": "Announcement Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 50,
      "max": 250,
      "step": 10,
      "unit": "px",
      "label": "Logo width",
      "default": 100
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#000000"
    }
  ],
  "blocks": [
    {
      "type": "menu_item",
      "name": "Menu Item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Menu item",
          "default": "Menu item"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "NENA Navbar",
      "blocks": [
        {
          "type": "menu_item",
          "settings": {
            "title": "New Music",
            "link": "/collections/new-music"
          }
        },
        {
          "type": "menu_item",
          "settings": {
            "title": "Tour",
            "link": "/pages/tour"
          }
        },
        {
          "type": "menu_item",
          "settings": {
            "title": "Videos",
            "link": "/pages/videos"
          }
        },
        {
          "type": "menu_item",
          "settings": {
            "title": "Music Store",
            "link": "/collections/all"
          }
        },
        {
          "type": "menu_item",
          "settings": {
            "title": "Merch",
            "link": "/collections/merch"
          }
        },
        {
          "type": "menu_item",
          "settings": {
            "title": "Sign Up",
            "link": "/pages/newsletter"
          }
        }
      ]
    }
  ]
}
{% endschema %}

<style>
  .announcement-bar {
    background-color: {{ section.settings.announcement_bg_color }};
    color: {{ section.settings.announcement_text_color }};
    text-align: center;
    padding: 10px 0;
    font-size: 14px;
  }
  #shopify-section-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    border-bottom: 1px solid #E5E5E5;
  }
  #navbar-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 20px;
  }
  .logo {
    flex: 0 0 auto;
  }
  .nav-menu {
    display: flex;
    justify-content: center;
    flex: 1 1 auto;
    gap: 30px;
  }
  #navbar-wrapper a {
    color: {{ section.settings.text_color }};
    text-decoration: none;
    font-size: 16px;
    font-family: Arial, sans-serif;
  }
  .social-icons {
    display: flex;
    gap: 15px;
    flex: 0 0 auto;
  }
  .social-icons svg {
    width: 20px;
    height: 20px;
    fill: {{ section.settings.text_color }};
  }
  @media (max-width: 768px) {
    #navbar-wrapper {
      flex-direction: column;
      align-items: center;
    }
    .nav-menu, .social-icons {
      margin-top: 20px;
    }
  }
</style>

<div class="announcement-bar">
  {{ section.settings.announcement_text }}
</div>

<div id="navbar-wrapper">
  <a href="{{ routes.root_url }}" class="logo">
    {% if section.settings.logo != blank %}
      {{ section.settings.logo | image_url: width: section.settings.logo_width | image_tag:
        width: section.settings.logo_width,
        height: '',
        alt: shop.name
      }}
    {% else %}
      <span style="font-size: 24px; font-weight: bold;">NENA</span>
    {% endif %}
  </a>
  
  <nav class="nav-menu">
    {% for block in section.blocks %}
      {% if block.settings.title != blank and block.settings.link != blank %}
        <a href="{{ block.settings.link }}">{{ block.settings.title }}</a>
      {% endif %}
    {% endfor %}
  </nav>
  
  <div class="social-icons">
    {% render 'social-icons', icon_size: 20 %}
  </div>
</div>