{% schema %}
{
  "name": "Album Promo Hero",
  "settings": [
    {
      "type": "video",
      "id": "background_video",
      "label": "Background Video"
    },
    {
      "type": "text",
      "id": "album_name",
      "label": "Album Name",
      "default": "vertigo"
    },
    {
      "type": "text",
      "id": "album_subtitle",
      "label": "Album Subtitle",
      "default": "the album"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Call to Action Text",
      "default": "LISTEN"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Call to Action Link"
    }
  ],
  "presets": [
    {
      "name": "Album Promo Hero"
    }
  ]
}
{% endschema %}

<div id="hero-carousel-{{ section.id }}" class="hero-carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <div class="media-wrapper">
        {% if section.settings.background_video != blank %}
          <video autoplay loop muted playsinline>
            <source src="{{ section.settings.background_video | file_url }}" type="video/mp4">
            Your browser does not support the video tag.
          </video>
        {% else %}
          {{ 'lifestyle-1' | placeholder_svg_tag }}
        {% endif %}
      </div>
      <div class="carousel-caption">
        <div class="carousel-caption-inner">
          <h2 class="title">
            {{ section.settings.album_name }}................{{ section.settings.album_subtitle }}
          </h2>
          <p class="subtitle">Out now</p>
          {% if section.settings.cta_link != blank %}
            <div class="btn-wrapper">
              <a class="btn btn-light" href="{{ section.settings.cta_link }}">
                {{ section.settings.cta_text }}
              </a>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  #hero-carousel-{{ section.id }} {
    position: relative;
    overflow: hidden;
    height: 100vh;
    width: 100%;
  }
  #hero-carousel-{{ section.id }} .media-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }
  #hero-carousel-{{ section.id }} video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  #hero-carousel-{{ section.id }} .carousel-caption {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 2;
    color: white;
    text-align: center;
    padding: 20px;
    background: linear-gradient(to top, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0) 100%);
  }
  #hero-carousel-{{ section.id }} .carousel-caption-inner {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-end;
    height: 50vh;
  }
  #hero-carousel-{{ section.id }} .title {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    font-weight: normal;
    font-style: italic;
  }
  #hero-carousel-{{ section.id }} .subtitle {
    font-size: 1.5rem;
    margin-bottom: 2rem;
  }
  #hero-carousel-{{ section.id }} .btn-light {
    background-color: white;
    color: black;
    border: none;
    padding: 10px 30px;
    font-size: 1rem;
    text-transform: uppercase;
    font-weight: bold;
    border-radius: 5px;
  }
  #hero-carousel-{{ section.id }} .btn-light:hover {
    background-color: #f0f0f0;
  }
</style>