{% schema %}
{
  "name": "Album Promo Hero",
  "settings": [
    {
      "type": "video",
      "id": "background_video",
      "label": "Background Video"
    },
    {
      "type": "text",
      "id": "album_name",
      "label": "Album Name",
      "default": "vertigo"
    },
    {
      "type": "text",
      "id": "album_subtitle",
      "label": "Album Subtitle",
      "default": "the album"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Call to Action Text",
      "default": "LISTEN"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Call to Action Link"
    }
  ],
  "presets": [
    {
      "name": "Album Promo Hero"
    }
  ]
}
{% endschema %}

<div id="hero-carousel-{{ section.id }}" class="hero-carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <div class="media-wrapper">
        {% if section.settings.background_video != blank %}
          <video autoplay loop muted playsinline>
            <source src="{{ section.settings.background_video | file_url }}" type="video/mp4">
            Your browser does not support the video tag.
          </video>
        {% else %}
          {{ 'lifestyle-1' | placeholder_svg_tag }}
        {% endif %}
      </div>
      <div class="overlay"></div>
      <div class="carousel-caption carousel-caption-center">
        <div class="carousel-caption-inner" style="max-width: 900px;">
          <h2 class="title mb-4 h1">
            {{ section.settings.album_name }}................{{ section.settings.album_subtitle }}
          </h2>
          <p class="subtitle fs-lg">Out now</p>
          {% if section.settings.cta_link != blank %}
            <div class="btn-wrapper m-n2">
              <a class="btn m-2 btn-dark fs-md" href="{{ section.settings.cta_link }}">
                {{ section.settings.cta_text }}
              </a>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  #hero-carousel-{{ section.id }} {
    position: relative;
    overflow: hidden;
    height: 100vh;
  }
  #hero-carousel-{{ section.id }} .media-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
  #hero-carousel-{{ section.id }} video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  #hero-carousel-{{ section.id }} .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(255, 255, 255, 0.3); /* Semi-transparent white overlay */
  }
  #hero-carousel-{{ section.id }} .carousel-caption {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2;
    color: black;
    text-align: center;
  }
  #hero-carousel-{{ section.id }} .title {
    font-size: 3rem;
    margin-bottom: 1rem;
    font-weight: bold;
  }
  #hero-carousel-{{ section.id }} .subtitle {
    font-size: 1.5rem;
    margin-bottom: 2rem;
  }
  #hero-carousel-{{ section.id }} .btn-dark {
    background-color: black;
    color: white;
    border: 2px solid black;
    padding: 10px 30px;
    font-size: 1rem;
    text-transform: uppercase;
  }
  #hero-carousel-{{ section.id }} .btn-dark:hover {
    background-color: white;
    color: black;
  }
</style>