{% schema %}
{
  "name": "Album Promo Hero",
  "settings": [
    {
      "type": "video_url",
      "id": "video_url",
      "label": "Video URL",
      "accept": ["youtube", "vimeo"]
    },
    {
      "type": "text",
      "id": "album_name",
      "label": "Album Name",
      "default": "vertigo"
    },
    {
      "type": "text",
      "id": "album_subtitle",
      "label": "Album Subtitle",
      "default": "the album"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Call to Action Text",
      "default": "LISTEN"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Call to Action Link"
    }
  ],
  "presets": [
    {
      "name": "Album Promo Hero"
    }
  ]
}
{% endschema %}

<div id="hero-carousel-{{ section.id }}" class="hero-carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <div class="media-wrapper">
        {% if section.settings.video_url != blank %}
          {% if section.settings.video_url.type == "youtube" %}
            <iframe src="https://www.youtube.com/embed/{{ section.settings.video_url.id }}?autoplay=1&loop=1&mute=1&playlist={{ section.settings.video_url.id }}&controls=0&showinfo=0" frameborder="0" allowfullscreen></iframe>
          {% elsif section.settings.video_url.type == "vimeo" %}
            <iframe src="https://player.vimeo.com/video/{{ section.settings.video_url.id }}?background=1&autoplay=1&loop=1&byline=0&title=0" frameborder="0" allowfullscreen></iframe>
          {% endif %}
        {% else %}
          {{ 'lifestyle-1' | placeholder_svg_tag }}
        {% endif %}
      </div>
      <div class="carousel-caption carousel-caption-center">
        <div class="carousel-caption-inner" style="max-width: 900px;">
          <h2 class="title mb-4 h1">
            {{ section.settings.album_name }}................{{ section.settings.album_subtitle }}
          </h2>
          <p class="subtitle fs-lg">Out now</p>
          {% if section.settings.cta_link != blank %}
            <div class="btn-wrapper m-n2">
              <a class="btn m-2 btn-light-white fs-md" href="{{ section.settings.cta_link }}">
                {{ section.settings.cta_text }}
              </a>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  #hero-carousel-{{ section.id }} {
    position: relative;
    overflow: hidden;
    height: 100vh;
  }
  #hero-carousel-{{ section.id }} .media-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
  #hero-carousel-{{ section.id }} iframe {
    width: 100vw;
    height: 56.25vw; /* 16:9 aspect ratio */
    min-height: 100vh;
    min-width: 177.77vh; /* 16:9 aspect ratio */
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }
  #hero-carousel-{{ section.id }} .carousel-caption {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2;
    color: white;
    text-align: center;
  }
  #hero-carousel-{{ section.id }} .title {
    font-size: 3rem;
    margin-bottom: 1rem;
  }
  #hero-carousel-{{ section.id }} .subtitle {
    font-size: 1.5rem;
    margin-bottom: 2rem;
  }
  #hero-carousel-{{ section.id }} .btn-light-white {
    background-color: rgba(255, 255, 255, 0.2);
    color: white;
    border: 2px solid white;
    padding: 10px 30px;
    font-size: 1rem;
    text-transform: uppercase;
  }
</style>