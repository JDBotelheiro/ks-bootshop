{% schema %}
{
  "name": "NENA Navbar",
  "limit": 1,
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 50,
      "max": 250,
      "step": 10,
      "unit": "px",
      "label": "Logo width",
      "default": 100
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#000000"
    }
  ]
}
{% endschema %}

<style>
  #shopify-section-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    border-bottom: 1px solid #E5E5E5;
  }
  #navbar-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 20px;
  }
  .logo {
    flex: 0 0 auto;
  }
  .nav-menu {
    display: flex;
    justify-content: center;
    flex: 1 1 auto;
    gap: 30px;
  }
  #navbar-wrapper a {
    color: {{ section.settings.text_color }};
    text-decoration: none;
    font-size: 16px;
    font-family: Arial, sans-serif;
  }
  .social-icons {
    display: flex;
    gap: 15px;
    flex: 0 0 auto;
  }
  .social-icons svg {
    width: 20px;
    height: 20px;
    fill: {{ section.settings.text_color }};
  }
  @media (max-width: 768px) {
    #navbar-wrapper {
      flex-direction: column;
      align-items: center;
    }
    .nav-menu, .social-icons {
      margin-top: 20px;
    }
  }
</style>

<div id="navbar-wrapper">
  <a href="{{ routes.root_url }}" class="logo">
    {% if section.settings.logo != blank %}
      {{ section.settings.logo | image_url: width: section.settings.logo_width | image_tag:
        width: section.settings.logo_width,
        height: '',
        alt: shop.name
      }}
    {% else %}
      <span style="font-size: 24px; font-weight: bold;">NENA</span>
    {% endif %}
  </a>
  
  <nav class="nav-menu">
    <a href="/collections/novas-musicas">Novas Músicas</a>
    <a href="/pages/concertos">Concertos</a>
    <a href="/pages/videos">Vídeos</a>
    <a href="/collections/all">Loja de Música</a>
    <a href="/collections/merch">Merch</a>
    <a href="/pages/newsletter">Inscreva-se</a>
  </nav>
  
  <div class="social-icons">
    {% render 'social-icons', icon_size: 20 %}
  </div>
</div>