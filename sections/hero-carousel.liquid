{% schema %}
{
  "name": "Simple Hero",
  "settings": [
    {
      "type": "text",
      "id": "hero_text",
      "label": "Hero Text",
      "default": "Welcome to NENA's World"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button Text",
      "default": "LISTEN NOW"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Simple Hero",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}

<div class="simple-hero">
  <div class="hero-content">
    <h1>{{ section.settings.hero_text }}</h1>
    {% if section.settings.cta_link != blank %}
      <a href="{{ section.settings.cta_link }}" class="cta-button">
        {{ section.settings.cta_text }}
      </a>
    {% endif %}
  </div>
</div>

<style>
  .simple-hero {
    height: calc(100vh - 100px); /* Adjust based on your header height */
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    background-color: #f0f0f0; /* Light grey background */
  }

  .hero-content {
    padding: 20px;
  }

  .hero-content h1 {
    font-size: 2.5em;
    margin-bottom: 20px;
  }

  .cta-button {
    display: inline-block;
    padding: 10px 20px;
    background-color: #000;
    color: #fff;
    text-decoration: none;
    font-weight: bold;
    border-radius: 5px;
  }

  .cta-button:hover {
    background-color: #333;
  }
</style>